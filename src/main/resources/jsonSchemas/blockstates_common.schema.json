{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minecraft Blockstates JSON",
  "type": "object",
  "properties": {
    "variants": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "uvlock": {
                "type": "boolean",
                "default": false
              }
            }
          }
        ]
      },
      "uniqueItems": true
    }
  }
}